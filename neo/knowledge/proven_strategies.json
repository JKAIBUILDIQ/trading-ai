  "rsi2_connors": {
    "source": "Connors/Alvarez 'Short Term Trading Strategies' (2008) ISBN: 978-0981923901",
    "category": "mean_reversion",
    "rules": {
      "indicator": {
        "rsi_period": 2,
        "oversold_threshold": 10,
        "extreme_oversold": 5,
        "overbought_exit": 70
      },
      "entry_long": {
        "condition_1": "RSI(2) < 10",
        "condition_2": "Price > 200 SMA (uptrend filter)",
        "aggressive": "RSI(2) < 5 for higher win rate"
      },
      "entry_short": {
        "condition_1": "RSI(2) > 90",
        "condition_2": "Price < 200 SMA (downtrend filter)"
      },
      "exit": {
        "target": "RSI(2) > 70 OR close above 5-day SMA",
        "max_hold": "5 days"
      }
    },
    "expected_win_rate": "88%",
    "avg_gain_per_trade": "1.64%",
    "avg_holding_period": "3.9 days",
    "profit_factor": 1.8,
    "when_to_use": [
      "Any market regime",
      "Stocks and ETFs (SPY, QQQ)",
      "Mean-reverting instruments"
    ],
    "when_to_avoid": [
      "Strong downtrends (ignore longs)",
      "High volatility crashes",
      "When VIX > 35"
    ]
  },
  
  "london_breakout": {
    "source": "Kathy Lien 'Day Trading the Currency Market' (2015) ISBN: 978-1119108412",
    "category": "breakout",
    "rules": {
      "setup": {
        "define_range": "Asian session high/low (00:00-07:00 UTC)",
        "qualify": "Range should be < average daily range / 2"
      },
      "entry": {
        "timing": "London open (07:00-08:00 UTC)",
        "long": "Break above Asian high + 5-15 pip buffer",
        "short": "Break below Asian low - 5-15 pip buffer"
      },
      "stop_loss": {
        "method": "Other side of Asian range",
        "alternative": "Middle of Asian range (tighter)"
      },
      "take_profit": {
        "method_1": "1.5x Asian range size",
        "method_2": "Fixed risk:reward 1.5:1 or 2:1"
      }
    },
    "expected_win_rate": "55-60%",
    "profit_factor": 1.3,
    "when_to_use": [
      "EURUSD, GBPUSD, EURGBP",
      "Monday-Thursday",
      "When Asian range is tight"
    ],
    "when_to_avoid": [
      "Major news in first hour of London",
      "Friday (weekend flow)",
      "Holiday weeks"
    ]
  },
  
  "news_fade": {
    "source": "Andersen et al. (American Economic Review 2003)",
    "category": "event_trading",
    "rules": {
      "setup": {
        "wait_for": "High-impact news release",
        "events": ["NFP", "FOMC", "CPI", "GDP"]
      },
      "entry": {
        "timing": "5-15 minutes after release",
        "direction": "FADE the initial spike",
        "confirmation": "Look for rejection candle/wick"
      },
      "reasoning": {
        "first_move": "Retail panic and algo spikes",
        "reversal": "Institutions taking the other side",
        "typical_reversion": "30-50% of initial spike"
      }
    },
    "expected_win_rate": "60-65%",
    "optimal_delay_minutes": {
      "NFP": "5-10",
      "FOMC": "15-30",
      "general": "5-15"
    },
    "when_to_use": [
      "NFP Friday",
      "FOMC minutes",
      "GDP preliminary"
    ],
    "when_to_avoid": [
      "FOMC rate decisions (can start new trends)",
      "Black swan events",
      "Geopolitical shocks"
    ]
  },
  
  "stop_hunt_fade": {
    "source": "Institutional Flow Research / Market Microstructure",
    "category": "institutional_flow",
    "rules": {
      "setup": {
        "identify_level": "Obvious support/resistance",
        "watch_for": "Price spikes through level aggressively"
      },
      "confirmation": {
        "requirement": "Quick reversal back through level",
        "timing": "Within 5-15 minutes of the spike",
        "volume": "Spike on low volume suggests stop hunt"
      },
      "entry": {
        "trigger": "Close back inside original range",
        "direction": "With the reversal (opposite of spike)"
      },
      "stop_loss": {
        "placement": "Beyond the spike extreme",
        "buffer": "Add 5-10 pips for safety"
      },
      "target": {
        "minimum": "Previous session high/low",
        "extended": "Next major support/resistance"
      }
    },
    "expected_win_rate": "65%",
    "when_to_use": [
      "Session opens (London, NY)",
      "Round number levels (1.1000, 1.2000)",
      "Previous day high/low",
      "Weekly high/low"
    ],
    "when_to_avoid": [
      "When break is followed by strong momentum",
      "During news events",
      "In strong trending markets"
    ]
  },
  
