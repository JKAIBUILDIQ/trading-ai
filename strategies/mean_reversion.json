  "systems": {
    "rsi_2_basic": {
      "name": "Basic RSI(2) Strategy",
      "description": "Buy extreme oversold, sell at mean reversion",
      "entry_rules": {
        "long": "RSI(2) < 10",
        "condition": "Price above 200-day SMA (uptrend filter)"
      },
      "exit_rules": {
        "target": "RSI(2) > 70 OR close above 5-day SMA",
        "stop": "Fixed % or none (high win rate strategy)"
      },
      "markets": "Stocks, ETFs (especially SPY, QQQ)"
    },
    "rsi_2_cumulative": {
      "name": "Cumulative RSI(2) Strategy",
      "description": "Accumulate positions on consecutive down days",
      "entry_rules": {
        "day_1": "RSI(2) < 60 - buy 10% position",
        "day_2": "RSI(2) < 50 - add 20%",
        "day_3": "RSI(2) < 40 - add 30%",
        "day_4": "RSI(2) < 30 - add 40%"
      },
      "exit_rules": {
        "target": "Close above 5-day SMA"
      }
    },
    "rsi_2_extreme": {
      "name": "RSI(2) Extreme Oversold",
      "entry_rules": {
        "long": "RSI(2) < 5",
        "filter": "Price above 200-day SMA"
      },
      "exit_rules": {
        "target": "Close above yesterday's high"
      },
      "note": "Higher win rate, fewer signals"
    }
  },
  
